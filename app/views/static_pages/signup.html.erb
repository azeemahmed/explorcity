<div class="cpage">

<h1 class="chead">Learn More</h1>

<p class="cpara">
	It takes barely a minute to create an account with us. You will enjoy the experience 100%! </p>

	<%= form_for(@user, :html => { :class => "myform" }) do |f| %>
		<%= render 'shared/error_messages' %>
		
		<%= f.label :name, class: "control-label" %>
		<%= f.text_field :name, class: "input-xlarge" %>
		
		<%= f.label :email, class: "control-label" %>
		<%= f.text_field :email, class: "input-xlarge" %>
		
		<%= f.label :password, class: "control-label" %>
		<%= f.password_field :password, class: "input-xlarge" %>
		
		<%= f.label :password_confirmation, "Confirmation (Password)", class: "control-label" %>
		<%= f.password_field :password_confirmation, class: "input-xlarge" %>
		
		<%= f.submit "Sign Up - Its Free!", class: "btn btn-primary" %> 
		
		<li class="links"><%= link_to "Got Facebook Account? Sign In!", about_path, :html => { :class => "links"} %></li>
		
		<%end%>

		
</div>




